                    <!--android:layout_weight="1"-->
                    <!--android:text="重新登录"-->
                    <!--android:textSize="16sp"-->
                    <!--android:textColor="@color/relogin_highlight_text"/>-->
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>