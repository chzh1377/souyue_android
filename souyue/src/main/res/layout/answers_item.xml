<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="13dp">

        <RelativeLayout
            android:id="@+id/rl_qa_item_info"
            android:layout_width="fill_parent"
            android:layout_height="23dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_qa_item_author"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textColor="#50b4e3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_qa_item_date"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="#a0a0a0"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_answer_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:textColor="#313131"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="26dp"
            android:layout_marginTop="13dp"
            android:gravity="right"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:background="@drawable/btn_oval"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <ImageButton
                    android:id="@+id/ib_up"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="33dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/up_normal_1" />

                <TextView
                    android:id="@+id/tv_up"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="31dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/btn_oval"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <ImageButton
                    android:id="@+id/ib_down"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="33dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/down_normal_1" />

                <TextView
                    android:id="@+id/tv_down"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="31dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/zero"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:scaleType="fitXY"
        android:src="@drawable/listview_divider" />

</LinearLayout>