<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/all_titlebar_bg_color"
        android:gravity="center_vertical">

    <ImageButton
            android:id="@+id/circle_index_back_imgBtn"
            style="@style/HoloButton.Borderless.Back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:onClick="onBackPressClick"
            android:src="@drawable/goback_button_selector">
    </ImageButton>

    <TextView
            android:id="@+id/circle_index_circlename_tv"
            android:layout_toRightOf="@id/circle_index_back_imgBtn"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/bar_left_title_color"
            android:layout_toLeftOf="@+id/btn_detail_subscribe"/>


    <ImageButton
            android:id="@+id/circle_index_menu_imgBtn"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            style="@style/HoloButton.Borderless.Back"
            android:src="@drawable/title_bar_menu_selector">
    </ImageButton>
    
    <ImageView
         android:id="@+id/cicle_red_point_img"
        android:layout_alignRight="@+id/circle_index_menu_imgBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/im_chat_red_point_icon"
        android:visibility="gone"
        android:contentDescription="@null"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:scaleType="fitXY" />
    
    <!-- android:layout_above="@+id/circle_index_menu_imgBtn" -->

    <!-- <ImageButton
            android:id="@+id/circle_index_subscribe_imgBtn"
            android:layout_toLeftOf="@id/circle_index_menu_imgBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="center"
            style="@style/HoloButton.Borderless.Back"
            android:src="@drawable/circle_subscribe_selector">
    </ImageButton> -->
    <ImageButton
            android:id="@+id/btn_detail_subscribe"
            style="@style/HoloButton.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:visibility="gone"
            android:layout_marginRight="16dip"
            android:layout_toLeftOf="@+id/circle_index_search_imgBtn"
            android:src="@drawable/srp_subscribe_selector"
            >
    </ImageButton>

    <ImageButton
            android:id="@+id/circle_index_search_imgBtn"
            android:layout_toLeftOf="@id/circle_index_menu_imgBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            style="@style/HoloButton.Borderless.Back"
            android:src="@drawable/circle_search_selector"/>

    <View style="@style/Bar_Horizonal_line_style"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>