<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="22dp">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/linearLayout">
        <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:id="@+id/home_wgd_ib_add"
                android:background="@color/transparent"
                android:src="@drawable/home_selector_bubble"
                android:layout_marginTop="-5dp"
                android:layout_marginLeft="-9dp"
                android:focusableInTouchMode="false"
                android:scaleType="centerInside" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/home_list_bottom_height"
                android:text="新浪新闻"
                android:id="@+id/home_wgd_tv_news"
                android:textColor="@color/ball_text_color"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"
                android:gravity="top"
                android:paddingRight="10dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/home_list_bottom_height"
                android:text="12分钟前"
                android:id="@+id/home_wgd_tv_time"
                android:textColor="@color/ball_text_color"
                android:textSize="11sp"
                android:paddingRight="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="top"
                android:layout_marginTop="2dp" />
        <com.zhongsou.souyue.view.BorderTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_spacial"
                android:id="@+id/tv_home_bottom_spacial"
                android:textSize="8sp"
                style="@style/home_rect_gray_style"
                android:gravity="top"
                android:layout_marginTop="5dp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/home_wgd_tx_congraduation"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:layout_marginRight="15dp"
            android:visibility="visible">

        <ImageView
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:id="@+id/imageView2"
                android:src="@drawable/circle_mypost_icon"
                android:scaleType="centerInside"
                android:layout_marginTop="3dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:id="@+id/home_wgd_tv_great"
                android:layout_marginLeft="3dp"
                android:textSize="12sp"
                android:paddingLeft="2dip"
                android:textColor="@color/ball_text_color"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="1dp" />

        <ImageView
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:id="@+id/imageView3"
                android:src="@drawable/circle_mypost_follow"
                android:scaleType="centerInside"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100000"
                android:id="@+id/home_wgd_tv_comment"
                android:textSize="12sp"
                android:layout_marginLeft="3dp"
                android:paddingLeft="2dip"
                android:textColor="@color/ball_text_color"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="1dp" />
    </LinearLayout>
</RelativeLayout>