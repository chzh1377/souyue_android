<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/common_pop_bg"
              android:orientation="vertical"
              android:padding="@dimen/space_8"
    >

    <RelativeLayout
        android:id="@+id/sub_root"
        android:layout_width="155dip"
        android:layout_height="40dip"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="@string/new_sub_top"
            android:textColor="@color/middark_black"
            android:textSize="14sp"
            />

        <CheckBox
            android:id="@+id/cb_status"
            style="@style/MyCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@id/title"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/all_bg_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/create_group"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:text="@string/create_sub_group"
        android:textColor="@color/middark_black"
        android:textSize="14sp"
        />

</LinearLayout>