<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/cricle_list_item_border"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/im_item_selector"
        android:paddingRight="10dp"
        android:tag="front">

        <FrameLayout
            android:id="@+id/row_iv_image_layout"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/invite_notice_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/im_friendsicon"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/im_friends_head_roundbg" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_toRightOf="@+id/row_iv_image_layout"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/invite_notice_tv_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="用户名"
                    android:textColor="#292929"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/invite_notice_et_beizhu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/invite_notice_xian"
                    android:drawableLeft="@drawable/edit_pen_small"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="备注昵称"
                    android:singleLine="true"
                    android:textColor="#afafaf"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>