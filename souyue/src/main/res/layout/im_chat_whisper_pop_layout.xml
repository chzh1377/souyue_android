<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.zhongsou.souyue"
    android:id="@+id/im_chat_text_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg_color"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="105dip"
        android:orientation="horizontal"
        android:padding="15dp" >

        <com.zhongsou.souyue.im.view.RoundProgressBar
            android:id="@+id/roundProgressBar"
            android:layout_width="75dip"
            android:layout_height="75dip"
            android_custom:im_roundColor="@color/all_bg_color"
            android_custom:im_roundProgressColor="#CD3333"
            android_custom:im_roundWidth="10dip"
            android_custom:im_textColor="#CD3333"
            android_custom:im_textSize="18sp"
           />

        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:src="@drawable/im_now_burned_icon"
            android:onClick="deleteWhisperEvent"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="15dip"
            >

            <TextView
                android:id="@+id/chat_pop_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="aaaaaaaaaaa"
                android:lineSpacingExtra="3dip"
                android:layout_alignParentLeft="true"
                android:maxLines="30"
                android:textColor="@color/black"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:paddingBottom="15dip"
                android:textSize="22sp" />
        </LinearLayout>

</LinearLayout>