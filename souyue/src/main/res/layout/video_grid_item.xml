<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/aboutvideos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        android:drawableLeft="@drawable/detail_title_blue_line"
        android:drawablePadding="15dp"
        android:text="相关视频"
        android:textColor="@color/detail_latest_color"
        android:textSize="@dimen/text_size_14" />


    <LinearLayout
        android:id="@+id/clickView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_list_item_selector"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_list_item_selector"
        >

        <com.facebook.drawee.view.ZSImageView
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            fresco:actualImageScaleType="fitXY" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/black"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10"
            android:alpha="0.7"/>
    </RelativeLayout>

    <TextView

        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="2dip"
        android:text=""
        android:textColor="#282828"
        android:textSize="@dimen/text_size_12"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="8dip"
        android:maxLines="2"
        android:minLines="2"
        android:ellipsize="end"
        />

    <CheckBox
        android:id="@+id/videopalycount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:button="@null"
        android:drawableLeft="@drawable/videopalycount"
        android:drawablePadding="10dip"
        android:text=""
        android:textColor="@color/black_overlay"
        android:textSize="11sp"
        android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>