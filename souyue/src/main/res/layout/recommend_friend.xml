<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/repeat_draw_bg"
              android:orientation="vertical">

    <include layout="@layout/titlebar_onlytitle_toac"/>

    <LinearLayout
            android:id="@+id/ll_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/about_logo_icon_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/about_logo_icon"/>

        <ImageView
                android:id="@+id/about_logo_name_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@drawable/about_logo_name"/>
    </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/font"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/recommentFirendActivity_des"
                    android:textColor="@color/recommendfriend_font_bg"
                    android:textSize="14dp"/>

            <Button
                    android:id="@+id/btn_recomment_friend"
                    android:layout_width="fill_parent"
                    android:layout_height="42dp"
                    android:layout_marginBottom="42dp"
                    android:layout_marginTop="46dp"
                    android:layout_marginLeft="@dimen/space_18"
                    android:layout_marginRight="@dimen/space_18"
                    android:background="@drawable/mood_publish"
                    android:text="@string/settingActivity_recommend_friend"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"/>
        </LinearLayout>

</LinearLayout>