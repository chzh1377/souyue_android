<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="match_parent" >
<include layout="@layout/circle_title_bar" android:id="@+id/title"/>
    <GridView
        android:layout_below="@+id/title"
        android:id="@+id/child_grid"
        android:padding="5dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="5dip"
        android:gravity="center"
        android:verticalSpacing="5dip"
        android:columnWidth="90dip"
        android:layout_above="@+id/ll_tip"
        android:numColumns="auto_fit" >
    </GridView>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_tip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/all_titlebar_bg_color"
         >
        <TextView 
            android:layout_alignParentLeft="true"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:textSize="14sp"
            android:text="相册"
            android:id="@+id/tv_xiangce"
             android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="@color/bar_left_title_color"
            /> 
            
        <TextView 
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@color/bar_left_title_color"
            /> 
            
        <TextView 
            android:id="@+id/tv_finish"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="14sp"
            android:text="完成"
             android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:textColor="@color/bar_left_title_color"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
            /> 
    </RelativeLayout>
</RelativeLayout>