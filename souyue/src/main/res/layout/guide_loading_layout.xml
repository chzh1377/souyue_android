<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_guide_loading_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_guide_loading_skipe"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_guide_subcribed_selector"
        android:gravity="center"
        android:padding="3dp"
        android:text="@string/guide_skipe"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_guide_loading_pic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="@dimen/guide_image_margin_top"
        android:scaleType="fitXY"
        android:src="@drawable/guide_pic1" />

    <ProgressBar
        android:id="@+id/pb_guide_loading"
        style="@style/guideProgressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
	    android:layout_marginTop="65dp"
	    android:layout_marginBottom="45dp"
        android:indeterminateDuration="1000"
         />
    
	<LinearLayout 
	    android:id="@+id/rl_guide_loading_faield_layout"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_marginTop="65dp"
	    android:layout_marginBottom="45dp"
	    android:gravity="center_horizontal"
	    android:layout_alignParentBottom="true"
	    android:visibility="gone"
	    >
	    
	     <TextView 
	        android:id="@+id/tv_guide_net_faield"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/guide_net_faield"
	        android:textSize="18sp"
	        android:textColor="@color/guide_text_color_normal"
	        />
	     
	   <TextView 
	        android:id="@+id/tv_guide_retry"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/guide_retry"
	        android:textSize="18sp"
	        android:textColor="@color/guide_text_loading_retry"
	        android:singleLine="true"
	        />
	</LinearLayout>
	
</RelativeLayout>