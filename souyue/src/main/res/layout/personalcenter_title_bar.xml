<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/all_titlebar_bg_color"
        android:gravity="center_vertical">

    <ImageButton
            android:id="@+id/circle_index_back_imgBtn"
            style="@style/HoloButton.Borderless.Back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:onClick="onBackPressClick"
            android:src="@drawable/goback_button_selector">
    </ImageButton>

    <TextView
            android:id="@+id/activity_bar_title"
            android:layout_toRightOf="@id/circle_index_back_imgBtn"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/bar_left_title_color"
            android:layout_toLeftOf="@+id/circle_index_search_imgBtn"/>


    <ImageButton
            android:id="@+id/ib_personal_menu"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:visibility="gone"
            style="@style/HoloButton.Borderless.Back"
            android:src="@drawable/title_bar_menu_selector">
    </ImageButton>
    
    <View style="@style/Bar_Horizonal_line_style"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>