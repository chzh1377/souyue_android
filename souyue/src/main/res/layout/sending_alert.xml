<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/sendimg_alert_dialog_round"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="15dp"
        android:text="@string/sendingAlert_des"
        android:textColor="#4a4a4a"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="12dp"
        android:gravity="left"
        android:text=""
        android:textColor="@color/gotoself_color"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sending_alert_later"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1.0"
            android:background="@drawable/forgetpwd_text_bg"
            android:text="@string/sendingAlert_later_on"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/sending_alert_look"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1.0"
            android:background="@drawable/forgetpwd_text_bg"
            android:text="@string/sendingAlert_myself_create"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>