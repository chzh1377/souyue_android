<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dip"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/chatfrom_bg"
    android:padding="5dip">

    <TextView
        android:id="@+id/im_ask_for_cion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:text="@string/ask_for_coin"
        android:textColor="#282828"
        android:textSize="15sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:visibility="gone"
        android:background="@drawable/tiger_popup_line" />

    <!--  <View
         android:layout_width="match_parent"
         android:layout_height="1px"
         android:background="#88d4eff7"/> -->
    <LinearLayout
        android:id="@+id/im_ask_icon_go_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dip"
            android:layout_height="90dip"
            android:layout_marginLeft="12dip"
            android:src="@drawable/slot_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingLeft="10dip"
            android:singleLine="true"
            android:text="欢乐老虎机"
            android:textColor="@color/im_chat_tiger_text"
            android:textSize="15sp" />

        <TextView
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_marginRight="10dip"
            android:background="@drawable/im_left_right_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/im_ask_coin_btnlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/im_ask_iocn_cancel"
            android:layout_width="80dip"
            android:layout_height="35dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/btn_gray_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="舍不得"
            android:textColor="#7e7e7e"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/im_ask_iocn_ok"
            android:layout_width="80dip"
            android:layout_height="35dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/btn_yellow_bg"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="我是好人"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>