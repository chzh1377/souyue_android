<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/space_370"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
    <!-- recommend 1-->
    <RelativeLayout
            android:id="@+id/gallery_recommend_item_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_145">
        <ImageView
                android:id="@+id/gallery_recommend_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_1"
                />
        <TextView
                android:id="@+id/gallery_recommend_text1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_25"
                android:padding="@dimen/space_3"
                android:textSize="@dimen/space_12"
                android:layout_marginLeft="@dimen/space_1"
                android:layout_marginRight="@dimen/space_1"
                android:layout_marginBottom="@dimen/space_1"
                android:text="loading..."
                android:background="@color/transparent_60"
                android:textColor="@color/white"
                android:maxLines="1"
                android:layout_alignParentBottom="true"
                android:gravity="left|center_vertical"
                android:ellipsize="end"
        />
    </RelativeLayout>
</LinearLayout>
