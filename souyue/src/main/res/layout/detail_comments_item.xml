<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="50dp"
    android:paddingRight="10dp"
    android:orientation="vertical">


    <View
        android:id="@+id/tv_circle_comment_reply_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#DBDBDB"
        android:layout_marginBottom="5dp"
        android:visibility="gone" />
    <View
            android:id="@+id/tv_circle_comment_reply_line_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:background="#DBDBDB"
            android:layout_marginBottom="1dp"
            android:visibility="gone" />

    <TextView
        android:id="@+id/tv_circle_comment_reply_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:text="这是回复内回复内容"
        android:textColor="#7e7e7e"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_circle_comment_reply_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="@drawable/detail_voice_selector"
            android:id="@+id/detail_voice_reply">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:background="@drawable/audio_running_mine"
                android:id="@+id/detail_voice_animator_r"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60”"
                android:textColor="@color/plaza_sub_cata"
                android:layout_marginLeft="17dp"
                android:layout_marginBottom="6dp"
                android:id="@+id/detail_voice_second_r"
                android:layout_toRightOf="@+id/detail_voice_animator_r"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_circle_comment_reply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:text="5分钟前"
            android:textColor="#afafaf"
            android:textSize="13sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginTop="-20dp"
        android:layout_toRightOf="@id/tv_circle_comment_reply_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_circle_comment_reply_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@drawable/circle_posts_reply_delete" />
    </RelativeLayout>
    <!--     <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/horizontal_line"/> -->
</LinearLayout>