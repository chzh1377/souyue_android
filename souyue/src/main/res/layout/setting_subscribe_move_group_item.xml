<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/iv_setting_edit"
        style="@style/CommonImageButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="3dp"
        android:src="@drawable/subscribe_add"
        android:visibility="invisible" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toLeftOf="@id/iv_sublist_drag"
        android:layout_toRightOf="@id/iv_setting_edit"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/subscribe_text_color"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/iv_sublist_drag"
        style="@style/ActionButton.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:src="@drawable/home_edit"
        android:visibility="invisible" />

</RelativeLayout>