<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!--</LinearLayout>-->
    <!--<LinearLayout-->
    <!--android:id="@+id/group_layout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="@color/im_detail_color"-->
    <!--android:orientation="vertical" >-->


    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/discover_bg"/>

    <RelativeLayout
            android:id="@+id/group_name_layout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:background="@drawable/discover_listview_item_bg_selector"
            android:paddingRight="20dip"
            android:paddingLeft="20dip"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:text="群名称"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/group_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="160dp"
                android:layout_centerVertical="true"
                android:paddingLeft="20dip"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="群名称"
                android:gravity="right"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@+id/im_group_right_imgeview"
                android:textColor="@color/gray_7e"
                android:textSize="14sp"
                />

        <ImageView
                android:id="@+id/im_group_right_imgeview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:src="@drawable/mine_arrow_gray"/>

    </RelativeLayout>

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/discover_bg"
            android:layout_marginRight="20dip"
            android:layout_marginLeft="20dip"/>

    <RelativeLayout
            android:id="@+id/group_qr_code"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:background="@drawable/discover_listview_item_bg_selector"
            android:paddingRight="20dip"
            android:paddingLeft="20dip"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:text="群名片/二维码"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/my_erweima_icon"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/im_group_right_imgeview"/>

        <ImageView
                android:id="@+id/im_group_right_imgeview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:src="@drawable/mine_arrow_gray"/>

    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/discover_bg"
            />

    <RelativeLayout
            android:id="@+id/group_member_count"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:background="@color/white"
            android:paddingRight="20dip"
            android:paddingLeft="20dip"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:text="群成员人数"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>


        <TextView
                android:id="@+id/im_group_cout_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="0/0"
                android:gravity="right"
                android:textSize="16sp"
                android:textColor="@color/gray_7e"
                android:src="@drawable/im_group_right_icon"/>

    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/discover_bg"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/discover_bg"/>

    <RelativeLayout
            android:id="@+id/group_my_nickname"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:background="@drawable/discover_listview_item_bg_selector"
            android:paddingRight="20dip"
            android:paddingLeft="20dip"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:text="我的群昵称"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/group_my_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:paddingLeft="20dip"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@+id/im_group_right_imgeview"
                android:textColor="@color/gray_7e"
                android:textSize="14sp"
                />

        <ImageView
                android:id="@+id/im_group_right_imgeview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:src="@drawable/mine_arrow_gray"/>

    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/discover_bg"
            />

    <RelativeLayout
            android:id="@+id/msg_quiet"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:background="@color/white"
            android:paddingRight="20dip"
            android:paddingLeft="20dip"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:text="消息免打扰"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <ToggleButton
                android:id="@+id/tb_save_to_message"
                style="@style/im_group_chat_my_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:ellipsize="end"
                android:singleLine="false"
                android:textSize="12sp"/>

    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/discover_bg"
            />

    <RelativeLayout
            android:id="@+id/save_to_contact"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:background="@color/white"
            android:paddingRight="20dip"
            android:paddingLeft="20dip"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:text="保存至通讯录"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

        <ToggleButton
                android:id="@+id/tb_save_to_contact"
                style="@style/im_group_chat_my_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:ellipsize="end"
                android:singleLine="false"
                android:textSize="12sp"/>

    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/discover_bg"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/discover_bg"/>

    <RelativeLayout
            android:id="@+id/im_download_file"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:background="@color/white"
            android:paddingRight="20dip"
            android:paddingLeft="20dip"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:text="下载的文件"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>


    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/discover_bg"
            />

    <RelativeLayout
            android:id="@+id/edit_group_im_layout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:background="@color/white"
            android:paddingRight="20dip"
            android:paddingLeft="20dip"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:text="编辑消息"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>


    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/discover_bg"
            />


    <RelativeLayout
            android:id="@+id/clear_all_history"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:background="@drawable/discover_listview_item_bg_selector"
            android:paddingRight="20dip"
            android:paddingLeft="20dip"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:text="@string/clear_history"
                android:textColor="@color/ent_my_consume_red"
                android:textSize="18sp"/>


        <!-- <ImageView
                android:id="@+id/im_group_right_imgeview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:src="@drawable/im_group_right_icon"
                /> -->

    </RelativeLayout>


    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/discover_bg"/>

    <Button
            android:id="@+id/im_btn_exitGroup"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="57dp"
            android:layout_marginRight="57dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"
            android:background="#d74143"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="退出群聊"
            android:textColor="@color/setting_logout"
            android:textSize="16sp"/>
</LinearLayout>