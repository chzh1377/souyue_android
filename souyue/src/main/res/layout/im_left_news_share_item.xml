<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dip"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/chat_bg_card_selector"
    android:padding="5dip">

    <TextView
        android:id="@+id/im_logo_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dip"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="3dip"
        android:drawableLeft="@drawable/im_share_pop_icon"
        android:drawablePadding="12dip"
        android:text="分享"
        android:visibility="gone"
        android:textColor="#282828"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:visibility="gone"
        android:background="@drawable/tiger_right_popup_line" />

    <LinearLayout
        android:id="@+id/im_ask_share_go_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:minHeight="60dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_share_news_icon"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginLeft="12dip"
            android:scaleType="centerCrop"
            android:src="@drawable/circle_title_default_icon" />

        <TextView
            android:id="@+id/im_share_news_context"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingLeft="10dip"
            android:textColor="#282828"
            android:layout_marginRight="2dp"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>