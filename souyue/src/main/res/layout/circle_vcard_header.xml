<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_circle_vcard_top_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <ImageView
        android:id="@+id/iv_circle_vcard_bg"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:scaleType="centerCrop"
        android:src="@drawable/circle_vcard_default_top_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignBottom="@+id/iv_circle_vcard_bg"
        android:layout_alignParentLeft="true"
        android:background="@drawable/circle_vcard_message_bg" >

        <ImageView
            android:id="@+id/iv_circle_vcard_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="18dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/circle_default_head" />

        <TextView
            android:id="@+id/tv_circle_vcard_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_circle_vcard_icon"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_circle_vcard_icon"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_circle_vcard_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_circle_vcard_nickname"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@id/iv_circle_vcard_icon"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>