<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <ImageButton
        android:id="@+id/iv_home_key_delete"
        style="@style/ActionButton.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/home_key_subsrcibe_delete"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/iv_home_key_delete">

        <TextView
            android:id="@android:id/text1"
            style="@style/HomeListItemTextZhStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center" />

        <TextView
            android:id="@android:id/text2"
            style="@style/HomeListItemTextEnStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@android:id/text1" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/iv_home_key_drag"
        style="@style/ActionButton.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="16dp"
        android:src="@drawable/home_edit"
        android:visibility="invisible" />

</RelativeLayout>