<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        >

    <RelativeLayout
            android:id="@+id/rl_search_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

        <TextView
                android:id="@+id/percenter_interest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/contacts_search_blue_icon"
                android:text="  查看更多结果"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:textColor="#418ec9"/>

        <LinearLayout
                android:id="@+id/percenter_interest_more_layout"
                android:layout_width="wrap_content"
                android:minWidth="60dp"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/percenter_interest_more_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/percenter_arrow_more"
                    android:textColor="#7e7e7e"
                    android:textSize="12sp"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
