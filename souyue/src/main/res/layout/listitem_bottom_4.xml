<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_bottombar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
>
    <RelativeLayout
            android:id="@+id/lay1"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_home_selector_list_button"
            android:layout_marginRight="10dp"
    >
        <TextView
                android:id="@+id/tv_cricle_good"
                style="@style/list_up_down_tv"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/btn_up_nor"
                android:text="顶"
                android:background="@null"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/lay2"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_home_selector_list_button"
            android:layout_alignBaseline="@+id/lay1"
            android:layout_alignBottom="@+id/lay1"
            android:layout_toRightOf="@+id/lay1"
            android:layout_marginRight="10dp"
    >
        <TextView
                android:id="@+id/tv_cricle_down"
                style="@style/list_up_down_tv"
                android:drawableLeft="@drawable/btn_down_nor"
                android:text="踩"
                android:background="@null"
                android:layout_width="wrap_content"
                />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/lay3"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_home_selector_list_button"
            android:layout_alignBaseline="@+id/lay2"
            android:layout_alignBottom="@+id/lay2"
            android:layout_toRightOf="@+id/lay2"
    >
        <TextView
                android:id="@+id/tv_cricle_follow"
                style="@style/list_up_down_tv"
                android:drawableLeft="@drawable/btn_comment_nor"
                android:background="@null"
                android:layout_width="wrap_content"
                android:text="跟帖"/>

        </RelativeLayout>
