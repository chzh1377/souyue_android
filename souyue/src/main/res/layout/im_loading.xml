<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subcribe_loading_layout"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@drawable/subscribe_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/loading_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"
        android:layout_marginTop="@dimen/space_17"
        android:gravity="center">

        <ProgressBar
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/subscribe_rotate"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
            android:layout_marginTop="@dimen/space_17"
        android:id="@+id/loading_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/unsubscribe"
        android:visibility="gone" />

    <TextView
        android:layout_marginTop="@dimen/space_17"
        android:layout_marginBottom="@dimen/space_20"
        android:id="@+id/loading_tip_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/im_load_tips"
        android:textColor="@color/color_srp_dialog"
        android:textSize="@dimen/text_size_16" />
</LinearLayout>