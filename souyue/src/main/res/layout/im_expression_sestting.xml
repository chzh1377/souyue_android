<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <include layout="@layout/im_title_include"/>


    <ListView android:id="@+id/lv_expression_list"
              android:layout_height="match_parent"
              android:dividerHeight="0.5dip"
              android:divider="#e5e5e5"
              android:listSelector="#f2f2f2"
              android:background="#f2f2f2"
              android:visibility="gone"
              android:layout_width="match_parent">
    </ListView>
    <LinearLayout
            android:id="@+id/default_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:orientation="vertical">
        <ImageView
                android:id="@+id/no_expression"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:src="@drawable/no_expression"/>
        <!--<Button
                android:id="@+id/down_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:background="@drawable/down_load_back"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="16sp"
                android:textColor="#0080FC"
                android:text="@string/down_load"
                />-->
    </LinearLayout>

</LinearLayout>
