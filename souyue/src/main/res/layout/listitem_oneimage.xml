<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/ll_cricle_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="6dp">

        <!-- 标题区 -->
        <!-- <include layout="@layout/cricle_list_item_title" /> -->

        <!-- 标题 -->

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingRight="@dimen/space_10"
                android:layout_toLeftOf="@+id/image"
                android:clickable="false"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="阿斯顿发送到发的说法是打发的说法是打飞机男男女女男男女女男男女女男男女女男男女女"
                android:singleLine="false"
                android:lineSpacingMultiplier="1.0"
                android:textColor="@color/color_srp_title"
                android:textSize="@dimen/souyue_all_middle"
        />
        <com.zhongsou.souyue.view.HotConfigView
                android:id="@+id/hotconfigView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dip"
                android:layout_marginTop="3dip"/>

        <com.facebook.drawee.view.ZSImageView
                android:id="@+id/image"
                android:layout_width="100dip"
                android:layout_height="70dip"
                android:layout_alignParentRight="true"
                fresco:actualImageScaleType="centerCrop"
        />

        <RelativeLayout
            android:layout_width="100dip"
            android:layout_height="70dip"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/controller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/videoplaycontrooler"/>
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
            android:id="@+id/bottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
    />
</LinearLayout>