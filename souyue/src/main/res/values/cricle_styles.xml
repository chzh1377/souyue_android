<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="cricle_setting_left">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@color/cricle_manage_left_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="cricle_detai_left">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@color/cricle_manage_left_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="cricle_setting_left_below" parent="cricle_setting_left">
        <item name="android:textSize">12sp</item>
         <item name="android:textColor">@color/cricle_manage_left_below_text_color</item>
        <item name="android:gravity">@null</item>
    </style>
    
    <style name="cricle_setting_my_toggle" parent="@android:style/Widget.Button.Toggle">
        <item name="android:background">@drawable/cricle_btn_toggle</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="cricle_setting_right_text">
       <item name="android:textColor">#74c7ed</item>
       <item name="android:textSize">16sp</item>
    </style>
    
    <style name="common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
    
    <string name="circle_mypost_textview_style">
        <item name="android:textColor">@color/cricle_list_topic_text_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </string>
</resources>
