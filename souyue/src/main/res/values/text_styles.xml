<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CompanyNameStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#505050</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CompanyDescStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ababab</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SourceTimeStyel">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#a0a0a0</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="focus_noimg_st_style">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="HeaderText" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#b9b9b9</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="fragmentTitleBarZhTextStyle">
        <item name="android:textColor">@color/title_fragment_bar_font</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="commentBtnTextStyle">
        <item name="android:textColor">@color/comment_btn_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="fragmentTitleBarEnTextStyle">
        <item name="android:textColor">@color/title_fragment_bar_en_text_color</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="about_coutext">
        <item name="android:textColor">@color/font_about_context</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:gravity">top|fill_horizontal</item>
    </style>

    <style name="about_title">
        <item name="android:textColor">@color/font_about_title</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="setting_left">
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/im_i_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="push_left">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="preferences_center">
        <item name="android:textColor">@color/gray_7e</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">top|right</item>
    </style>

    <style name="HomeListItemTextZhStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/home_list_item_text_zh</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="HomeListItemTextEnStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/home_list_item_text_zh</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="PopSubItemTextZhStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/pop_item_font</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="home_title_actionbar_text">
        <item name="android:textColor">@color/pop_item_font</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    

</resources>