<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="footbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="user_center_footbar" parent="footbar">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:gravity">left|center</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="main_footbar_radio" parent="footbar">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="main_footbar_image">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="main_footbar_cutline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_head_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textColor">@color/head_text</item>
        <item name="android:shadowColor">@color/main_head_title_shadow_color</item>
    </style>
    
    <style name="title_base_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/title_base_button_text_color</item>
    </style>

    <style name="title_button" parent="title_base_button">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>
    
    <style name="title_goback_button" parent="title_base_button">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:background">@drawable/ent_btn_goback</item>
    </style>

    <style name="title_button_right" parent="title_base_button">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="title_imagebutton_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <!-- listView公用样式 -->
    <style name="CommonListviewStyle">
        <item name="android:divider">@drawable/ent_listview_divider</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <!-- 评论列表头部指示器样式 -->
    <style name="Widget">
    </style>
    <style name="Widget.IconPageIndicator" parent="Widget">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/ent_custom_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">#FF555555</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:fadingEdge">horizontal</item>
    </style>
    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="StyledIndicators" parent="AppTheme">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <!-- 资讯列表头部指示器样式 -->
    <style name="PageIndicatorDefaults" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/Widget.CustomTabPageIndicatorNews</item>
    </style>

    <style name="Widget.CustomTabPageIndicatorNews" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ent_custom_tab_indicator_news</item>
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.CustomTabPageIndicatorNews</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextAppearance.CustomTabPageIndicatorNews" parent="Widget">
        <item name="android:textColor">@drawable/ent_news_selector_tabtext</item>
    </style>

    <!-- 评论评分条 -->
    <style name="EngCommentRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ent_comment_rating_bar</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">45dp</item>
    </style>
    <style name="EngCommentRatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ent_comment_rating_bar_small</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">25dp</item>
    </style>

    <style name="main_footer_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@drawable/ent_footer_text_color</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ent_square_radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">#212121</item>
        <item name="android:clickable">false</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AnimationFade">
        <item name="android:windowEnterAnimation">@anim/ent_slide_down</item>
        <item name="android:windowExitAnimation">@anim/ent_slide_up</item>
    </style>

    <style name="ent_card_dialog_style" parent="@android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@drawable/ent_card_dialog_bg</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="ent_confirm_dialog_style" parent="@android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>


    <style name="ent_alert_dialog_style" parent="@android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <!-- 我的现金券指示器样式 -->
    <style name="CouponIndicators" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/Widget.CouponTabPageIndicator</item>
    </style>
    <style name="Widget.CouponTabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_tab</item>
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.CouponTabPageIndicator</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextAppearance.CouponTabPageIndicator" parent="Widget">
        <item name="android:textColor">@drawable/ent_coupon_selector_tabtext</item>
    </style>

    <style name="ent_coupon_checkbox_theme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ent_coupon_checkbox_style</item>
    </style>
    <style name="ent_coupon_dialog_style" parent="@android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <declare-styleable name="ent_slid_indicator">
       <attr name="indicatorStyle" format="enum">
           <enum name="expand" value="0"/>
           <enum name="shrink" value="1"/>
           <enum name="indicator" value="2"/>
           <enum name="line" value="3"/>
       </attr>
       <attr name="text" format="string"></attr>
       <attr name="textSize" format="dimension"></attr>
       <attr name="textAlign" format="dimension"></attr>
       <attr name="lineColor" format="color"></attr>
       <attr name="textColor" format="color"></attr>
   </declare-styleable>
   
    
    
</resources>