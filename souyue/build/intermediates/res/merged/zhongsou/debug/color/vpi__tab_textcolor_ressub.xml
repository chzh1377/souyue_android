<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false" android:color="@color/color_black2424"/>
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true" android:color="#FFFFFF"/>

    <!-- Focused states -->
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="false" android:color="#FFFFFF"/>
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="true" android:color="#FFFFFF"/>

    <!-- Pressed -->
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_pressed="true" android:state_selected="false" android:color="@color/color_black2424"/>
    <item android:state_focused="false" android:state_pressed="true" android:state_selected="true" android:color="#FFFFFF"/>

    <!-- Focused states -->
    <item android:state_focused="true" android:state_pressed="true" android:state_selected="false" android:color="#FFFFFF"/>
    <item android:state_focused="true" android:state_pressed="true" android:state_selected="true" android:color="#FFFFFF"/>

</selector>