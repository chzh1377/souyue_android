<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="11dp">

        <RelativeLayout
            android:id="@+id/rl_qa_info"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_qa_author"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textColor="#50b4e3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_qa_date"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="#a0a0a0"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_qa_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:textColor="#313131"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="26dp"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ib_answers" />

            <TextView
                android:id="@+id/tv_qa_answer_count"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_srp_content"
                android:textSize="14sp" />

            <ImageButton
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="22dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ib_sameask" />

            <TextView
                android:id="@+id/tv_qa_sameAsk_count"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_srp_content"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right">

                <Button
                    android:id="@+id/btn_qa_sameAsk"
                    android:layout_width="70dp"
                    android:layout_height="fill_parent"
                    android:background="@drawable/btn_oval"
                    android:text="@string/same_question" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="2dp"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:src="@drawable/q_a_bottom" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/q_a_triangle" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:src="@drawable/q_a_bottom" />
    </LinearLayout>

</LinearLayout>