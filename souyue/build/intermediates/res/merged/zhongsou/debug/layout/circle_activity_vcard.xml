<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical">


    <ListView
        android:id="@+id/lv_circle_vcard_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_circle_vcard_title"
        android:layout_marginTop="0dp"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:footerDividersEnabled="false" />

    <RelativeLayout
        android:id="@+id/rl_circle_vcard_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/all_titlebar_bg_color"
        >

        <include
            layout="@layout/title_bar_ac_goback"
            android:layout_alignParentLeft="true" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/goback"
            android:paddingLeft="50dip"
            android:paddingRight="50dip">

            <TextView
                android:id="@+id/tv_circle_vcard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="middle"
                android:gravity="center"
                android:maxLines="1"
                android:minHeight="48dip"
                android:singleLine="true"
                android:text="圈成员名片"
                android:textColor="@color/bar_center_title_color"
                android:textSize="18sp">

            </TextView>
        </LinearLayout>
        <View style="@style/Bar_Horizonal_line_style"/>
    </RelativeLayout>
</RelativeLayout>