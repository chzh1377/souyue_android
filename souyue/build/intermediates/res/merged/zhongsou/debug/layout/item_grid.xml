<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="66dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="@dimen/manager_grid_item_layout_width"
            android:layout_height="@dimen/manager_grid_item_layout_height"
            android:layout_gravity="center"
            android:padding="5dip"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/issecret"
            android:layout_width="@dimen/manager_grid_item_layout_width"
            android:layout_height="@dimen/manager_grid_item_layout_height"
            android:layout_gravity="center"
            android:padding="5dip"
            android:src="@drawable/newmimi"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selected_delete" />
    </FrameLayout>

    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="1dp"
        android:singleLine="true"
        android:textSize="15sp"
        android:textColor="#7e7e7e" />

</LinearLayout>