<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/space_14"
            android:textColor="@color/color_srp_title"
            android:text="@string/home_title_dialog_comfirm_message"
            android:id="@+id/tv_home_dialog_message"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginTop="@dimen/space_8"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
    <ImageView
            android:id="@+id/home_title_dialog_subicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="84dp"
            android:src="@drawable/circle_title_default_icon_c"/>
</RelativeLayout>