<?xml version="1.0" encoding="utf-8"?>
<!--新收引导第二页-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f35c6f"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <FrameLayout
                android:id="@+id/text_slogan"
                android:layout_width="match_parent"
                android:layout_height="105dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="满足各类人群"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_24"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="的阅读需求"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_23"/>
                </LinearLayout>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="请您选择"
                    android:textColor="@color/white"
                    android:textSize="@dimen/space_20"/>
            </FrameLayout>
            <com.facebook.drawee.view.ZSImageView
                android:id="@+id/home_leader_pagetwo_character"
                android:layout_width="150dp"
                android:layout_height="@dimen/first_leader_pagetwo_character_height"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                fresco:actualImageScaleType="fitCenter"
                fresco:placeholderImageScaleType="fitCenter"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_alignParentBottom="true"
            android:background="@color/splash_jump_button_text_color">
            <GridView
                android:layout_centerHorizontal="true"
                android:id="@+id/home_first_leader_pagetwo_button_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="59dp"
                android:background="@android:color/transparent"
                android:cacheColorHint="@color/transparent"
                android:listSelector="@color/transparent"
                android:numColumns="3"
                android:paddingLeft="@dimen/space_15"
                android:paddingRight="@dimen/space_15"
                android:columnWidth="@dimen/space_60"
                android:paddingTop="8dp"
                android:scrollbars="none"
                android:stretchMode="spacingWidth"
                android:verticalSpacing="20dp"/>

            <Button
                android:id="@+id/page3"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/home_guide_nextbtn_backgroup"
                android:text="选好啦"/>
        </RelativeLayout>

    </LinearLayout>
    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginLeft="@dimen/space_20"-->
    <!--android:layout_marginTop="@dimen/space_13"-->
    <!--android:src="@drawable/home_first_leader_back"/>-->


</RelativeLayout>