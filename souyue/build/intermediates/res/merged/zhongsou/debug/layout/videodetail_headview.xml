<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dip"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/videod_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="30dip"
        android:gravity="left"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_22"
        android:paddingLeft="20dip"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        >

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:text="分享得红包"
            android:textSize="@dimen/text_size_12"
            android:textColor="#7e7e7e"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv"
            android:background="#d3d3d3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv"
            android:background="#d3d3d3" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/share_wchat_frient"
                android:layout_width="match_parent"
                android:layout_height="58dip"
                android:src="@drawable/ic_weix_icon_selector" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="微信好友"
                android:textSize="@dimen/text_size_12"
                android:textColor="#878787"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/share_wchat_frientcircle"
                android:layout_width="match_parent"
                android:layout_height="58dip"
                android:src="@drawable/ic_friends_quan_icon_selector" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="微信朋友圈"
                android:textSize="@dimen/text_size_12"
                android:textColor="#878787"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/share_getprize"
                android:layout_width="match_parent"
                android:layout_height="58dip"
                android:src="@drawable/share_prize_selector" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="领取奖励"
                android:textSize="@dimen/text_size_12"
                android:textColor="#878787"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>