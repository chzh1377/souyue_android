<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:gravity="center">

    <ImageView android:scaleType="centerCrop"
               android:layout_width="fill_parent"
               android:layout_height="320dp"
               android:id="@+id/img_mine_bg"
               android:background="@null"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="140dip">

        <RelativeLayout android:id="@+id/mine_head_layout"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="@dimen/space_30"
                        android:layout_height="wrap_content">


            <ImageView android:scaleType="fitXY"
                       android:layout_width="90dp"
                       android:layout_height="90dp"
                       android:layout_marginTop="5dp"
                       android:layout_centerHorizontal="true"
                       android:src="@drawable/mine_headerview_headimg_bg"/>

            <ImageView android:id="@+id/mine_head_img"
                       android:scaleType="fitXY"
                       android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:layout_marginTop="10dp"
                       android:src="@drawable/mine_head_defaultimg"
                       android:layout_centerHorizontal="true"/>


            <!--             <ImageView android:id="@+id/mine_head_img_logo"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_alignRight="@id/mine_head_img"
                                   android:layout_alignBottom="@id/mine_head_img"
                                   android:layout_marginBottom="@dimen/space_5"
                                   android:src="@drawable/mine_head_modify_nromal"/> -->

            <TextView android:id="@+id/mine_head_txt"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/white40"
                      android:layout_marginTop="@dimen/space_10"
                      android:textSize="@dimen/text_size_16"
                      android:layout_below="@id/mine_head_img"
                      android:layout_centerHorizontal="true"
                    />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>