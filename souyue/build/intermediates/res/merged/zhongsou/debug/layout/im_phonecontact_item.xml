<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header"
        style="@style/MMListCatalog"
        android:layout_height="wrap_content"
        android:paddingRight="4.0dip" />

    <LinearLayout
        android:id="@+id/contactitem_layout"
        style="@style/MMListItem"
        android:background="@android:color/white"
        android:paddingLeft="8.0dip">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingLeft="8.0dip">

            <TextView
                android:id="@+id/phonename"
                style="@style/MMFontTitleInList"
                android:singleLine="true" />

            <TextView
                android:id="@+id/phoneno"
                style="@style/MMFontNumInList"
                android:drawableLeft="@drawable/im_phoneicon"
                android:drawablePadding="2dip"
                android:singleLine="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/operation_text"
            android:layout_width="70dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="15dip"
            android:gravity="center"
            android:textColor="@color/im_operation_text_color"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>