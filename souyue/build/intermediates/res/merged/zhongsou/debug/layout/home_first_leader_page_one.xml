<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/home_firstin_background"
    >


    <LinearLayout
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:padding="30dp"
            android:layout_height="0dp">
            <ImageView
                android:src="@drawable/home_first_leader_centershape"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:background="@color/splash_jump_button_text_color">
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="细颗粒"
            android:textColor="@color/white"
            android:textSize="@dimen/space_29"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性化阅读"
            android:textColor="@color/white"
            android:textSize="@dimen/space_28"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="高效获取信息工具"
        android:textColor="@color/white"
        android:textSize="@dimen/space_20"/>


    <LinearLayout
        android:splitMotionEvents="false"
        android:windowEnableSplitTouch="false"
        android:id="@+id/home_firstin_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        android:gravity="center"
        android:text="优 质 阅 读 体 验， 从 选 择 性 别 开 始"
        android:textColor="@color/home_firstin_background"
        android:textSize="16dp"/>
</RelativeLayout>