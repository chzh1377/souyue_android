<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="2">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/common_font_black_28"
                android:drawableTop="@drawable/home_circle_setmain_selector"
                android:text="@string/home_title_dialog_setmain"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:id="@+id/tv_home_dialog_setmain"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/common_font_black_28"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/home_circle_dis_subscrib_selector"
                android:text="@string/home_title_dialog_dissubcrib"
                android:id="@+id/tv_home_dialog_dissubcrib"/>
</LinearLayout>
</RelativeLayout>