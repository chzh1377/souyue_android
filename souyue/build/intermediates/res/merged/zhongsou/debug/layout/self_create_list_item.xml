            <ImageView
                    android:id="@+id/self_create_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/default_small"
                    android:scaleType="centerCrop"
                    android:visibility="visible"/>
            <LinearLayout
                    android:layout_toLeftOf="@id/self_create_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_self_create_status"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/check_no_pass"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="#d74143"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="visible"/>

                <TextView
                        android:id="@+id/self_create_title_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_self_create_status"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_toLeftOf="@+id/self_create_image"
                        android:textColor="#282828"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/tv_self_create_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_below="@id/self_create_title_txt"
                        android:textColor="#282828"
                        android:textSize="16sp"
                        android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>

