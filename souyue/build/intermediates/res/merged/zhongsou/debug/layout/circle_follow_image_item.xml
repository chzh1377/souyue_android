<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rl_image_item"
    android:clickable="true"
    >

    <ImageButton
        android:layout_marginTop="25dp"
        android:id="@+id/imgBtn_bolg_image"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:contentDescription="@null"
        android:padding="5dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/default_small"
        android:scaleType="fitXY" />
    
     <ImageButton
         android:id="@+id/cicle_follow_delete_img"
        android:layout_alignRight="@+id/imgBtn_bolg_image"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/cicle_follow_delete_img"
        android:contentDescription="@null"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY" />
    

</RelativeLayout>