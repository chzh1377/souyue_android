<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subcribe_loading_layout"
    android:layout_width="200dip"
    android:layout_height="130dip"
    android:background="@drawable/subscribe_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/loading_progress_bar"
        android:layout_width="120dip"
        android:layout_height="110dp"
        android:gravity="center">

        <ProgressBar
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/subscribe_rotate"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/loading_imageview"
        android:layout_width="120dip"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <TextView
        android:id="@+id/loading_tip_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:textColor="@color/color_srp_dialog"
        android:textSize="18sp" />
</LinearLayout>