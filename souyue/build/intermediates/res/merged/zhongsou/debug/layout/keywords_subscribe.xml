<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/titlebar_settingsub_toac" />

    <include
        layout="@layout/loading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    
    <View android:layout_height="10dip"
        android:layout_width="match_parent"
        android:background="@color/list_item_bg_color_normal"/>

    <ListView
        android:id="@+id/lv_keywords_subscribe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:cacheColorHint="@color/background_color"
        android:clickable="true"
        android:divider="@null"
        android:fadingEdge="none"
        android:focusable="true"
        android:scrollbars="none"></ListView>
</LinearLayout>