<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_color"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

        <TextView
                android:id="@+id/tv_circle_vcard_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="标题叫解放军大批高级将领集体撰文支持习近平指示"
                android:layout_toLeftOf="@+id/iv_circle_vcard_item_image"
                android:textColor="#282828"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="2"/>

        <TextView
                android:id="@+id/tv_circle_vcard_item_brief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#282828"
                android:textSize="18sp"
                android:visibility="gone"/>

        <ImageView
                android:id="@+id/iv_circle_vcard_item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/default_small"
                android:scaleType="centerCrop"
                android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_circle_vcard_item_content_imgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_circle_inbox_item_content_text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp">

        <com.zhongsou.souyue.view.SquareImageView
                android:id="@+id/iv_circle_vcard_item_content_img1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

        <LinearLayout
                android:id="@+id/ll_circle_vcard_item_content_imgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_circle_vcard_item_content_img1">

            <ImageView
                    android:id="@+id/iv_circle_vcard_item_content_img2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@drawable/default_small"
                    android:visibility="visible"/>

            <ImageView
                    android:id="@+id/iv_circle_vcard_item_content_img3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/default_small"
                    android:scaleType="centerCrop"
                    android:visibility="visible"/>

            <ImageView
                    android:id="@+id/iv_circle_vcard_item_content_img4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/default_small"
                    android:scaleType="centerCrop"
                    android:visibility="visible"/>
        </LinearLayout>
    </RelativeLayout>

    <!--
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
