    <RelativeLayout
            android:id="@+id/rl_circle_vcard_total"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

        <TextView
                android:id="@+id/tv_circle_vcard_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="美食圈"
                android:textColor="#7e7e7e"
                android:textSize="10sp"/>

        <TextView
                android:id="@+id/tv_circle_vcard_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="5分钟前"
                android:textColor="#7e7e7e"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_circle_vcard_source"/>
        <!--android:drawableLeft="@drawable/circle_posts_time"-->


        <LinearLayout
                android:id="@+id/home_wgd_tx_congraduation"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:visibility="visible">

            <ImageView
                    android:layout_width="12dip"
                    android:layout_height="12dip"
                    android:id="@+id/imageView2"
                    android:src="@drawable/circle_mypost_icon"
                    android:scaleType="centerInside"
                    android:layout_marginTop="3dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="10000"
                    android:id="@+id/tv_circle_vcard_up"
                    android:layout_marginLeft="3dp"
                    android:textSize="12sp"
                    android:paddingLeft="2dip"
                    android:textColor="@color/ball_text_color"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="1dp"/>

            <ImageView
                    android:layout_width="12dip"
                    android:layout_height="12dip"
                    android:id="@+id/imageView3"
                    android:src="@drawable/circle_repaly_icon"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="100000"
                    android:id="@+id/tv_circle_vcard_comment"
                    android:textSize="12sp"
                    android:layout_marginLeft="3dp"
                    android:paddingLeft="2dip"
                    android:textColor="@color/ball_text_color"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="1dp"/>
        </LinearLayout>

