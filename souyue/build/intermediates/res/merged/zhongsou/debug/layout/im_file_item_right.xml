<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dip"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_bg_card_right_selector"
    android:orientation="vertical"
    android:paddingBottom="10dip"
    android:paddingLeft="10dp"
    android:paddingRight="22dip"
    android:paddingTop="10dip">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/im_file_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="@dimen/text_size_16"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_weight="2"
                    android:textColor="@color/im_file_name"
                    />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                <TextView
                        android:id="@+id/file_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/im_file_size"
                        />

                <TextView
                        android:id="@+id/file_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/im_file_state"
                        android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>